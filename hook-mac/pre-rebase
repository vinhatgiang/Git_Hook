#!/bin/bash

# Git Hook: pre-rebase
# Platform: macOS
# Purpose: Block all rebase operations

# Function to show macOS dialog
show_dialog() {
    osascript -e "display dialog \"$1\" buttons {\"OK\"} default button \"OK\" with icon caution with title \"$2\""
}

echo
echo "REBASE OPERATION BLOCKED"
echo "All rebase operations are prohibited for maintaining git history integrity."
echo "Please use merge instead of rebase."

show_dialog "Rebase operation is blocked.\n\nThis action is prohibited for maintaining git history integrity.\n\nPlease:\n1. Use merge instead of rebase\n2. Create a Pull Request if needed\n3. Contact team lead if you need assistance" "Rebase Operation Blocked"

exit 1

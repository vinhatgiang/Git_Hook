@echo off
setlocal enabledelayedexpansion

REM Git Hook: pre-rebase
REM Platform: Windows
REM Purpose: Block all rebase operations

REM Function to show Windows dialog
set "SHOW_DIALOG=powershell -WindowStyle Hidden -Command "Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show"

echo.
echo REBASE OPERATION BLOCKED
echo All rebase operations are prohibited for maintaining git history integrity.
echo Please use merge instead of rebase.

%SHOW_DIALOG%('Rebase operation is blocked.\n\nThis action is prohibited for maintaining git history integrity.\n\nPlease:\n1. Use merge instead of rebase\n2. Create a Pull Request if needed\n3. Contact team lead if you need assistance', 'Rebase Operation Blocked', 'OK', 'Error')

exit /b 1
